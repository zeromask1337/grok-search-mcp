{
  "name": "xai-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for XAI x_search tool",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/cli.ts --transport http",
    "start": "bun run src/cli.ts --transport http",
    "start:stdio": "bun run src/cli.ts --transport stdio",
    "start:http": "bun run src/cli.ts --transport http --port 3000",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "commander": "^14.0.2",
    "hono": "^4.6.15",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "latest",
    "typescript": "^5.9.3"
  }
}
